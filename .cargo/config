[build]
target = "x86_64-epiphyllum.json"

[target.x86_64-epiphyllum]
rustflags = [
    "-C", "link-arg=-Tlinker.ld",
    "-C", "link-arg=-zmax-page-size=0x1000"
]

[target.'cfg(target_os = "none")']
runner = "qemu-system-x86_64 -cdrom target/boot.iso -device isa-debug-exit,iobase=0xf4,iosize=0x04 -s -no-reboot -d int,cpu_reset"

